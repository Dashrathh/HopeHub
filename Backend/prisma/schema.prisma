model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  email    String    @unique
  mobile   String
  password String
  role     Role      @default(USER)
  createAt DateTime  @default(now())
  Product  Product[]
}

enum Role {
  USER
  VOLUNTEER
  ADMIN
}

enum Status {
  AVAILABLE
  CLAIMED
  RECEIVED
}

enum claimStatus {
  PENDING
  APPROVED
  REJECTED
}

model Product {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  category    String
  image       String?
  status      Status  @default(AVAILABLE)
  userId      String  @db.ObjectId // <-- ye missing tha
  listedBy    User    @relation(fields: [userId], references: [id])
}
